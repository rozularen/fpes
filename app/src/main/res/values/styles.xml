<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Habilitar la Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="facebook_login_button">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="my_rating_bar_style">
        <item name="colorControlNormal">#ffcc00</item>
        <item name="colorControlActivated">#ffcc00</item>
        <item name="android:colorBackground">@color/duskYellow</item>
    </style>

    <style name="customSmallRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">#ffcc00</item>
        <item name="colorControlActivated">#ffcc00</item>
        <item name="android:colorBackground">@color/duskYellow</item>
    </style>
</resources>
