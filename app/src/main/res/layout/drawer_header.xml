<com.argandevteam.fpes.ui.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="#6d6d6d"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_drawer_user_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_drawer_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="User Name Loading"
            android:textColor="#FAFAFA"
            android:textSize="24dp" />
    </LinearLayout>
</com.argandevteam.fpes.ui.CustomLinearLayout>